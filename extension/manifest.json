{
  "manifest_version": 3,
  "name": "Takealot Price Tracker",
  "version": "2.0",
  "permissions": ["scripting"],
  "host_permissions": [
    "*://*.takealot.com/*",
    "https://takealot-honey-server.onrender.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.takealot.com/*"],
      "js": ["chart.js", "content.js"],
      "run_at": "document_idle"
    }
  ]
}